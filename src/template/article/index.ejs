<!DOCTYPE html>
<html lang="zh-cn">

<head>
  <%- include('../common/head.ejs') %>
  <%- include('../common/global_style.ejs') %>

  <title><%= title %> - <%= config.title %></title>
  <meta name="description" content="<%= description %>..." />
  <meta property="og:description" content="<%= description %>..." />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/firacode@5.2.0/distr/fira_code.min.css" />
  <link rel="stylesheet" href="/prism.css" />
</head>

<body>
  <%- include('../common/header.ejs', { reverse: true }) %>
  <article>
    <%- include('./article_header.ejs') %>
    <%- include('./article_content.ejs') %>
    <%- updates.length ? include('./article_updates.ejs') : null %>
  </article>
  <script src="https://giscus.app/client.js"
        data-repo="CodeByZack/blog"
        data-repo-id="MDEwOlJlcG9zaXRvcnkzMzIxNzU5ODg="
        data-category="Announcements"
        data-category-id="DIC_kwDOE8yadM4CUaFp"
        data-mapping="title"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="preferred_color_scheme"
        data-lang="zh-CN"
        crossorigin="anonymous"
        async>
  </script>
  <%- include('./article_action.ejs') %>
  <%- include('../common/footer.ejs') %>

  <script src="/theme.js"></script>
  <% if (isMind) { %>
  <style>
    .markmap {
      max-width: var(--content-max-width);
      margin: 15px auto;
      padding: 0 30px;
      color: var(--normal-color);
    }
    .markmap > svg{
      width: 100%;
      height: calc(100vh - 440px);
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/markmap-autoloader@latest"></script>
  <% } %>
</body>

</html>
