<!DOCTYPE html>
<html lang="zh-cn">

<head>
  <%- include('common/head.ejs') %>
  <%- include('common/global_style.ejs') %>

  <title><%= config.title %></title>
  <meta name="description" content="<%= config.description %>" />

  <style>
    .article-list {
      max-width: var(--content-max-width);
      margin: 40px auto;
      padding: 0 30px;
    }
    .article-item {
      list-style: none;
      display: block;
      margin: 15px 0;
    }
    .article-title {
      display: inline;
      font-weight: normal;
      margin: 0 10px 0 0;
      padding: 0;
      color: var(--normal-color);
      font-size: 20px;
    }
    .article-title > a {
      text-decoration: none;
      color: inherit;
    }
    .article-title > a:hover {
      text-decoration: underline;
    }
    .article-time {
      display: inline-block;
      font-size: 14px;
      color: var(--secondary-color);
    }
    .web-title{
      max-width: var(--content-max-width);
      margin: 0 auto;
      margin-bottom: 40px;
      padding: 0 30px;
      font-family: KaiTi;
    }
    .web-title > h1{
      font-size: 42px;
      margin-top: 0;
      color: var(--normal-color);
    }

    .web-title > h4{
      color: var(--secondary-color);
      font-size: 20px;
    }

  </style>
</head>

<body>
  <%- include('common/header.ejs', { reverse: false }) %>
  <div class="web-title">
    <h1><%= config.title %></h1>
    <h4><%= config.aphorisms %></h4>
    <hr/>
  </div>
  <ul class="article-list">
    <% articleList.forEach(article => { %>
      <li class="article-item">
        <h2 class="article-title">
          <a href="<%= config.public_path %>/<%= article.id %>"><%= article.title %></a>
        </h2>
        <time class="article-time"><%= article.publishTime %></time>
      </li>
    <% }) %>
  </ul>
  <%- include('common/footer.ejs') %>
</body>

</html>
